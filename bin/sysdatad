#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'sysmoon/ipc/server'
require 'sysmoon/log'
require 'sysmoon/trigger/database'

Sysmoon::Log.info('starting sysdatad...')

database = Sysmoon::Trigger::Database.new

# Creating an IPC server to accept data
data_server = Sysmoon::IPC::Server.new(
  port: :sysdatad,
  proxy: database
).start

Signal.trap('TERM') do
  data_server.stop
  exit(0)
end

Sysmoon::Log.info('sysdatad started!')

begin
  loop do
    sleep 3600 # FIXME: 1 hour, rewrite better
    # zip db if needed, save backup
  end
rescue SignalException => e
  Sysmoon::Log.warn("Signal got: #{e.signm}(#{e.signo})")
  data_server.stop
  exit(0)
end

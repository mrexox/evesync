#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'sysmoon/distro'
require 'sysmoon/handlers'
require 'sysmoon/log'

# TODO: puts -> logging
Log.info 'sysmoond starting!'

pkg_que = Queue.new

threads = []

threads << Thread.new { PackageWatcher.new(pkg_que).run }

threads << Thread.new { PackageHandler.new(pkg_que).run }

Log.info 'sysmoond started!'

Signal.trap('TERM') do
  Log.warn 'sysmoond killed...'
  threads.each(&:exit)
  exit(0)
end

Signal.trap('SIGINT') do
  Log.warn 'sysmoond interrupted...'
  threads.each(&:exit)
  exit(1)
end

loop do
  sleep 100
end

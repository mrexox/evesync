#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'sysmoon/distro'
require 'sysmoon/handler'
require 'sysmoon/log'

Sysmoon::Log.info 'sysmoond starting...'

queue = Queue.new

threads = []

threads << Thread.new(queue) { |q|
  Sysmoon::Handler::Local.new(q).run
}

threads << Thread.new(queue) { |q|
  Sysmoon::PackageWatcher.new(q).run
}

Sysmoon::Log.info 'sysmoond started!'

Signal.trap('SIGINT') do
  threads.each(&:exit)
  exit(0)
end

begin
  loop do
    sleep 100
  end
rescue SignalException => e
  Sysmoon::Log.warn("Signal got: #{e.signm}(#{signo})")
  threads.each(&:exit)
  exit(0)
end

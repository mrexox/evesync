#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'sysmoon/watcher'
require 'sysmoon/log'
require 'sysmoon/ipc'

Sysmoon::Log.info 'sysmoond starting...'

watcher = Sysmoon::Watcher::Main.new.start

sysmoon_server = Sysmoon::IPC::Server.new(
  port: :sysmoond,
  proxy: watcher
).start

Sysmoon::Log.info 'sysmoond started!'

# Signal handling

Signal.trap('SIGINT') do
  watcher.stop
  sysmoon_server.stop
  exit(0)
end

begin
  loop do
    sleep 100
    # FIXME: know what to do
  end
rescue SignalException => e
  Sysmoon::Log.warn("Signal got: #{e.signm}(#{e.signo})")
  watcher.stop
  sysmoon_server.stop
  exit(0)
end

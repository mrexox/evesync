#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'sysmoon/log'
require 'sysmoon/ipc/server'
require 'sysmoon/handler'

Sysmoon::Log.info('syshand starting...')

all_handler = Sysmoon::Handler.new

handler_server = Sysmoon::IPC::Server.new(
  port: :syshand,
  proxy: all_handler,
  ip: '*' # accept remote requests
).start

Sysmoon::Log.info('syshand started!')

# Signal handling

Signal.trap('TERM') do
  handler_server.stop
  exit(0)
end

begin
  loop do
    sleep 3600 # FIXME: 1 hour, rewrite better
    # FIXME: know what to do
  end
rescue SignalException => e
  Sysmoon::Log.warn("Signal got: #{e.signm}(#{e.signo})")
  handler_server.stop
  exit(0)
end
